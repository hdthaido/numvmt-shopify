{{ 'section-team-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- comment -%} Build filter list - either custom or auto from roles {%- endcomment -%}
{%- if section.settings.use_custom_filters and section.settings.custom_filters != blank -%}
  {%- assign filters_array = section.settings.custom_filters | split: ',' -%}
{%- else -%}
  {%- assign roles = '' -%}
  {%- for block in section.blocks -%}
    {%- if block.settings.title != blank -%}
      {%- assign roles = roles | append: block.settings.title | append: '|||' -%}
    {%- endif -%}
  {%- endfor -%}
  {%- assign filters_array = roles | split: '|||' | uniq -%}
{%- endif -%}

<section class="team-grid-section section-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.show_filter and filters_array.size > 0 -%}
      <div class="team-filter" id="team-filter-{{ section.id }}">
        <select class="team-filter__select" aria-label="Filter by role">
          <option value="all">All</option>
          {%- for filter in filters_array -%}
            {%- assign filter_clean = filter | strip -%}
            {%- if filter_clean != '' -%}
              <option value="{{ filter_clean | handleize }}">{{ filter_clean }}</option>
            {%- endif -%}
          {%- endfor -%}
        </select>
      </div>
    {%- endif -%}

    <article class="gallery" id="team-gallery-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- comment -%} Build comma-separated list of handleized categories {%- endcomment -%}
        {%- if block.settings.filter_category != blank -%}
          {%- assign categories = block.settings.filter_category | split: ',' -%}
          {%- assign member_roles = '' -%}
          {%- for cat in categories -%}
            {%- assign cat_clean = cat | strip | handleize -%}
            {%- if member_roles != '' -%}
              {%- assign member_roles = member_roles | append: ',' -%}
            {%- endif -%}
            {%- assign member_roles = member_roles | append: cat_clean -%}
          {%- endfor -%}
        {%- else -%}
          {%- assign member_roles = block.settings.title | handleize -%}
        {%- endif -%}
        
        {%- if block.settings.image != blank -%}
          <img 
            src="{{ block.settings.image | image_url: width: 400 }}"
            srcset="{{ block.settings.image | image_url: width: 200 }} 200w, {{ block.settings.image | image_url: width: 300 }} 300w, {{ block.settings.image | image_url: width: 400 }} 400w"
            loading="lazy"
            alt="{{ block.settings.name | escape }}"
            data-lightbox-trigger
            data-index="{{ forloop.index0 }}"
            data-roles="{{ member_roles }}"
          />
        {%- else -%}
          <img 
            src="https://assets.codepen.io/1506195/unsplash-music-0.avif" 
            alt="placeholder"
            data-lightbox-trigger
            data-index="{{ forloop.index0 }}"
            data-roles="{{ member_roles }}"
          />
        {%- endif -%}
      {%- endfor -%}
    </article>
  </div>

  {%- comment -%} Lightbox Modal {%- endcomment -%}
  <div class="team-lightbox" id="team-lightbox-{{ section.id }}" aria-hidden="true">
    <div class="team-lightbox__backdrop"></div>
    <div class="team-lightbox__content">
      <div class="team-lightbox__card">
        <button class="team-lightbox__close" aria-label="Close">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
        <div class="team-lightbox__left">
          <div class="team-lightbox__image-wrapper">
            <img class="team-lightbox__image" src="" alt="" />
          </div>
          <div class="team-lightbox__info">
            <p class="team-lightbox__role"></p>
            <h3 class="team-lightbox__name"></h3>
          </div>
        </div>
        <div class="team-lightbox__right">
          <div class="team-lightbox__bio rte"></div>
        </div>
      </div>
    </div>
  </div>

  {%- comment -%} Store team member data for JS {%- endcomment -%}
  <script type="application/json" id="team-data-{{ section.id }}">
    [
      {%- for block in section.blocks -%}
        {
          "image": "{{ block.settings.image | image_url: width: 600 | escape }}",
          "name": {{ block.settings.name | json }},
          "role": {{ block.settings.title | json }},
          "bio": {{ block.settings.bio | json }}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ]
  </script>

  <script>
    (function() {
      const sectionId = '{{ section.id }}';
      const gallery = document.getElementById('team-gallery-' + sectionId);
      const lightbox = document.getElementById('team-lightbox-' + sectionId);
      const dataEl = document.getElementById('team-data-' + sectionId);
      
      if (!gallery || !lightbox || !dataEl) return;
      
      const teamData = JSON.parse(dataEl.textContent);
      const backdrop = lightbox.querySelector('.team-lightbox__backdrop');
      const closeBtn = lightbox.querySelector('.team-lightbox__close');
      const imageEl = lightbox.querySelector('.team-lightbox__image');
      const nameEl = lightbox.querySelector('.team-lightbox__name');
      const roleEl = lightbox.querySelector('.team-lightbox__role');
      const bioEl = lightbox.querySelector('.team-lightbox__bio');

      function openLightbox(index) {
        const member = teamData[index];
        if (!member) return;

        // Clear previous image immediately
        imageEl.src = '';
        imageEl.style.opacity = '0';
        
        // Set new content
        nameEl.textContent = member.name;
        roleEl.textContent = member.role;
        bioEl.innerHTML = member.bio || '';

        // Load new image
        const newImage = new Image();
        newImage.onload = function() {
          imageEl.src = member.image;
          imageEl.alt = member.name;
          imageEl.style.opacity = '1';
        };
        newImage.src = member.image;

        lightbox.classList.add('is-open');
        lightbox.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      }

      function closeLightbox() {
        lightbox.classList.remove('is-open');
        lightbox.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }

      // Click on image to open
      gallery.addEventListener('click', (e) => {
        const trigger = e.target.closest('[data-lightbox-trigger]');
        if (trigger) {
          const index = parseInt(trigger.dataset.index, 10);
          openLightbox(index);
        }
      });

      // Close handlers
      closeBtn.addEventListener('click', closeLightbox);
      backdrop.addEventListener('click', closeLightbox);
      
      // ESC key to close
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightbox.classList.contains('is-open')) {
          closeLightbox();
        }
      });

      // Filter functionality
      const filterContainer = document.getElementById('team-filter-' + sectionId);
      if (filterContainer) {
        const filterSelect = filterContainer.querySelector('.team-filter__select');
        const images = gallery.querySelectorAll('img');

        function updateLayout() {
          // Get visible images and apply staggered layout
          const visibleImages = Array.from(images).filter(img => img.style.display !== 'none');
          
          // Reset all grid-column styles first
          images.forEach(img => {
            img.style.gridColumn = '';
          });

          // Only apply stagger on desktop (> 480px)
          if (window.innerWidth <= 480) {
            visibleImages.forEach(img => {
              img.style.gridColumn = 'span 1';
            });
            return;
          }

          // Apply staggered offset pattern to visible items
          // Pattern: items 4, 9, 14... (every 5th starting from 4th)
          visibleImages.forEach((img, index) => {
            const position = index + 1; // 1-based
            if ((position - 4) % 5 === 0 && position >= 4) {
              img.style.gridColumn = '2 / span 2';
            } else {
              img.style.gridColumn = 'span 2';
            }
          });
        }

        // Re-run layout on resize
        window.addEventListener('resize', updateLayout);

        filterSelect.addEventListener('change', () => {
          const filter = filterSelect.value;

          // Filter images - check if any of the member's roles match
          images.forEach(img => {
            const roles = (img.dataset.roles || '').split(',');
            const matches = filter === 'all' || roles.includes(filter);
            
            if (matches) {
              img.style.display = '';
              img.style.opacity = '1';
            } else {
              img.style.display = 'none';
              img.style.opacity = '0';
            }
          });

          // Recalculate layout for visible items
          updateLayout();
        });

        // Initial layout
        updateLayout();
      }
    })();
  </script>
</section>

{% schema %}
{
  "name": "Team Grid",
  "tag": "section",
  "class": "section-team-grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_filter",
      "label": "Show filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_custom_filters",
      "label": "Use custom filter names",
      "default": false,
      "info": "When enabled, uses custom filter names instead of auto-generating from roles"
    },
    {
      "type": "text",
      "id": "custom_filters",
      "label": "Custom filter names",
      "info": "Comma-separated list (e.g., Physiotherapy, Chiropractic, Massage)",
      "default": "Filter 1, Filter 2, Filter 3"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title/Role",
          "default": "Position"
        },
        {
          "type": "text",
          "id": "filter_category",
          "label": "Filter category",
          "info": "Use comma for multiple: 'Kinesiologist, Stretch Therapist'"
        },
        {
          "type": "richtext",
          "id": "bio",
          "label": "Bio (for lightbox)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Grid",
      "blocks": [
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" },
        { "type": "team_member" }
      ]
    }
  ]
}
{% endschema %}
