{{ 'section-booking-cards.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    --header-max-width: {{ section.settings.header_width }}rem;
  }
{%- endstyle -%}

<section class="booking-cards section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="booking-cards__container page-width">
    <div class="booking-cards__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="booking-cards__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <div class="booking-cards__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}
      {%- if section.settings.subtext != blank -%}
        <p class="booking-cards__subtext">
          {{ section.settings.subtext }}
        </p>
      {%- endif -%}
    </div>

      <div class="booking-cards__grid booking-cards__grid--{{ section.blocks.size }}-items">
        {%- for block in section.blocks -%}
          <a
            href="{{ block.settings.link | default: '#' }}"
            target="_blank"
            rel="noopener noreferrer"
            class="booking-card booking-card--text-{{ block.settings.text_position | default: 'center' }}"
            {{ block.shopify_attributes }}
          >
            <div class="booking-card__image-wrapper">
              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    widths: '300, 400, 500, 600, 800',
                    sizes: '(max-width: 749px) 100vw, (max-width: 989px) 50vw, 33vw',
                    class: 'booking-card__image'
                }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'booking-card__image placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="booking-card__overlay"></div>
            {%- if block.settings.title != blank -%}
              <div class="booking-card__content">
                <p class="booking-card__title">{{ block.settings.title }}</p>
              </div>
            {%- endif -%}
          </a>
        {%- endfor -%}
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Booking Cards",
  "tag": "section",
  "class": "section-booking-cards",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "BOOK YOUR APPOINTMENT NOW",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p><em>Direct Billing is Available for: Physiotherapy, Chiropractic, Registered Massage Therapy (RMT), & Acupuncture</em></p>",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "Located in: Vancouver & Burnaby",
      "label": "Subtext"
    },
    {
      "type": "range",
      "id": "header_width",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "rem",
      "label": "Header content width",
      "default": 70,
      "info": "Controls the max width of the heading and description"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Booking Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Book Now",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "text_position",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "center",
          "label": "Text position"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Booking Cards",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Book Health (Clinical Treatment)"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Complimentary Personal Training Session"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Complimentary Fitness Pilates Session"
          }
        }
      ]
    }
  ]
}
{% endschema %}
