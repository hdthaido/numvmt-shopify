{{ 'section-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .accordion__wrapper {
    max-width: {{ section.settings.accordion_width }}%;
    margin-left: auto;
    margin-right: auto;
  }

  .section-{{ section.id }} .accordion__item {
    background-color: {{ section.settings.item_background_color }};
  }
{%- endstyle -%}

<section class="accordion-section section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="accordion__wrapper">
      {%- if section.settings.heading != blank -%}
        <h2 class="accordion__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="accordion__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      <div class="accordion__list">
      {%- for block in section.blocks -%}
        <details class="accordion__item" {{ block.shopify_attributes }}>
          <summary class="accordion__trigger">
            <span class="accordion__title">{{ block.settings.title }}</span>
            <span class="accordion__icon">
              <svg class="accordion__icon-plus" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              <svg class="accordion__icon-close" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </span>
          </summary>
          <div class="accordion__content">
            <div class="accordion__content-inner rte">
              {{ block.settings.content }}
            </div>
          </div>
        </details>
      {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Accordion",
  "tag": "section",
  "class": "section-accordion",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" },
        { "value": "h0", "label": "Extra Large" }
      ],
      "default": "h2",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "range",
      "id": "accordion_width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Accordion width",
      "default": 100
    },
    {
      "type": "color",
      "id": "item_background_color",
      "label": "Item background color",
      "default": "#F9F6F1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "accordion_item",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Answer",
          "default": "<p>Provide a detailed answer to the question here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Accordion",
      "blocks": [
        {
          "type": "accordion_item",
          "settings": {
            "title": "Do I need a referral to see any of our therapists?",
            "content": "<p>No, you do not need a referral from a Medical Doctor to see one of our registered therapists.</p>"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "Are your services covered by health insurance/extended benefits?",
            "content": "<p>Yes, most of our services are covered by extended health benefits. Please check with your insurance provider for specific coverage details.</p>"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "What should I bring to my appointment?",
            "content": "<p>Please bring comfortable clothing, your health card, and any relevant medical documentation.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
