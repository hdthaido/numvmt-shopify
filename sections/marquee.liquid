{{ 'section-marquee.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .marquee__track {
    animation-duration: {{ section.settings.speed }}s;
    {%- if section.settings.direction == 'right' -%}
      animation-direction: reverse;
    {%- endif -%}
  }

  .section-{{ section.id }} .marquee__track:hover {
    {%- if section.settings.pause_on_hover -%}
      animation-play-state: paused;
    {%- endif -%}
  }
{%- endstyle -%}

<section class="marquee-section section-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="marquee">
    <div class="marquee__track">
      {%- comment -%} Original items {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div class="marquee__item" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'image' -%}
              <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      widths: '150, 200, 300, 400, 600',
                      class: 'marquee__image'
                  }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'marquee__image placeholder-svg' }}
                {%- endif -%}
              </div>

            {%- when 'text' -%}
              <span class="marquee__text {{ block.settings.text_size }}">
                {{ block.settings.text }}
              </span>

            {%- when 'image_text' -%}
              <div class="marquee__image-text">
                {%- if block.settings.image != blank -%}
                  <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag:
                        loading: 'lazy',
                        widths: '150, 200, 300, 400, 600',
                        class: 'marquee__image'
                    }}
                  </div>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <span class="marquee__text {{ block.settings.text_size }}">
                    {{ block.settings.text }}
                  </span>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}

      {%- comment -%} Duplicate items for seamless loop {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div class="marquee__item" aria-hidden="true">
          {%- case block.type -%}
            {%- when 'image' -%}
              <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      widths: '150, 200, 300, 400, 600',
                      class: 'marquee__image'
                  }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'marquee__image placeholder-svg' }}
                {%- endif -%}
              </div>

            {%- when 'text' -%}
              <span class="marquee__text {{ block.settings.text_size }}">
                {{ block.settings.text }}
              </span>

            {%- when 'image_text' -%}
              <div class="marquee__image-text">
                {%- if block.settings.image != blank -%}
                  <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag:
                        loading: 'lazy',
                        widths: '150, 200, 300, 400, 600',
                        class: 'marquee__image'
                    }}
                  </div>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <span class="marquee__text {{ block.settings.text_size }}">
                    {{ block.settings.text }}
                  </span>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}

      {%- comment -%} Third duplicate for extra coverage on wide screens {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div class="marquee__item" aria-hidden="true">
          {%- case block.type -%}
            {%- when 'image' -%}
              <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      widths: '150, 200, 300, 400, 600',
                      class: 'marquee__image'
                  }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'marquee__image placeholder-svg' }}
                {%- endif -%}
              </div>

            {%- when 'text' -%}
              <span class="marquee__text {{ block.settings.text_size }}">
                {{ block.settings.text }}
              </span>

            {%- when 'image_text' -%}
              <div class="marquee__image-text">
                {%- if block.settings.image != blank -%}
                  <div class="marquee__image-wrapper" style="--image-width: {{ block.settings.image_width }}px;">
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag:
                        loading: 'lazy',
                        widths: '150, 200, 300, 400, 600',
                        class: 'marquee__image'
                    }}
                  </div>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <span class="marquee__text {{ block.settings.text_size }}">
                    {{ block.settings.text }}
                  </span>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

